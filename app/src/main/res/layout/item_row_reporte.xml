<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_item_reporte"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    android:layout_marginHorizontal="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <TextView
                    android:background="@color/colorWhite"
                    android:id="@+id/txt_item_rp_zona"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:text="zona"
                    android:textAlignment="center"
                    android:padding="5dp"/>
                <TextView
                    android:background="@color/colorWhite"
                    android:id="@+id/txt_item_rp_manzana"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:text="manzana"
                    android:textAlignment="center"
                    android:padding="5dp"/>
                <TextView
                    android:background="@color/colorWhite"
                    android:id="@+id/txt_item_rp_estado"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:text="estado"
                    android:textAlignment="center"
                    android:padding="5dp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/check_item_rp_estado"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5dp"
                    android:tint="@color/colorGrisFuerte"
                    android:src="@drawable/ic_add_circle_36_white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
