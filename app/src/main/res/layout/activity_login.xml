<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logomapa"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c91b4379"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="30dp"
                    android:src="@drawable/logo_inei_blanco" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/login_titulo_encuesta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="App de Actualización Cartografica"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/textChico"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Widget.Design.TextInputLayout"
                    android:layout_margin="5dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#FFFFFF">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_edtUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Usuario"
                        android:inputType="text"
                        android:textSize="@dimen/textChico" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Widget.Design.TextInputLayout"
                    android:layout_margin="0dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#FFFFFF">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_edtClave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:textSize="@dimen/textChico" />
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/login_btnIngresar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_border"
                    android:text="INGRESAR"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>